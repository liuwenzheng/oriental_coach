<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_efefef"
    android:orientation="vertical">

    <include layout="@layout/header_layout" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/white_ffffff"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:gravity="center_vertical"
                android:text="帐号："
                android:textColor="@color/black_424242"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/et_accounts"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:background="@null"
                android:hint="请输入帐号"
                android:textColor="@color/black_424242"
                android:textColorHint="@color/grey_999999"
                android:textSize="14sp" />
        </LinearLayout>


        <View style="@style/divider_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:gravity="center_vertical"
                android:text="旧密码："
                android:textColor="@color/black_424242"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/et_password_old"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:background="@null"
                android:hint="请输入原密码"
                android:textColor="@color/black_424242"
                android:textColorHint="@color/grey_999999"
                android:textSize="14sp" />
        </LinearLayout>

        <View style="@style/divider_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:gravity="center_vertical"
                android:text="新密码："
                android:textColor="@color/black_424242"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/et_password_new"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:background="@null"
                android:hint="请输入新密码"
                android:textColor="@color/black_424242"
                android:textColorHint="@color/grey_999999"
                android:textSize="14sp" />
        </LinearLayout>

        <View style="@style/divider_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:gravity="center_vertical"
                android:text="确认密码："
                android:textColor="@color/black_424242"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/et_password_new_again"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:background="@null"
                android:hint="请再次输入新密码"
                android:textColor="@color/black_424242"
                android:textColorHint="@color/grey_999999"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="15dp"
        android:text="提示：密码由6-16个字符组成，区分大小写（不能是9位以下纯数字，不能包含空格）"
        android:textColor="@color/grey_b9b9b9"
        android:textSize="13sp" />

    <Button
        android:id="@+id/btn_finish"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="15dp"
        android:background="@color/blue_4c6f98"
        android:gravity="center"
        android:text="完成"
        android:textColor="@color/white_ffffff"
        android:textSize="16sp" />
</LinearLayout>
